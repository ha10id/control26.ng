  script(src='libs/angular-bootstrap/ui-bootstrap-tpls.min.js')
  script(src='libs/ng-file-upload/ng-file-upload-shim.min.js')
  script(src='libs/ng-file-upload/ng-file-upload.min.js')
  script(src='libs/ya-map/ya-map-2.1.min.js')
  script(src='js/app.js')
  script(src='js/services.js')
  script(src='js/controllers.js')
  script(src='js/filters.js')
  script(src='js/directives.js')
  script(src='js/components.js')

